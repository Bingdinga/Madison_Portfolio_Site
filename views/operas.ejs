<%- include('partials/header') %>

<section class="operas-hero">
  <div class="container">
    <h1>Directed Operas</h1>
    <p class="subtitle">A selection of Madison's work in Opera</p>
  </div>
</section>

<section class="featured-works">
  <div class="container">
    <h2>Opera Productions</h2>
    <div class="featured-grid">
      <% operas.forEach(opera => { %>
        <article class="featured-item">
          <img src="<%= opera.featuredImage %>" alt="<%= opera.title %>">
          <div class="featured-content">
            <h3><%= opera.title %></h3>
            <p><%= opera.composer %></p>
            <p><%= opera.venue %>, <%= opera.year %></p>
            <a href="/operas/<%= opera.id %>" class="btn secondary-btn">View Details</a>
          </div>
        </article>
      <% }); %>
    </div>
  </div>
</section>

<%- include('partials/footer') %>